{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // ESM + Node settings
    "module": "NodeNext",          // must match the exact casing
    "target": "ES2022",
    "moduleResolution": "NodeNext", // must match the exact casing
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,

    // Relaxed TS for learning
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    

    // Other recommended
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
